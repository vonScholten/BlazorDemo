@using BlazorDemo.Shared
@inject HttpClient Http

  <div class="mb-3">
    <div class="input-group">
      <div class="input-group-prepend">
        <button type="submit" class="btn border-secondary border-right-0 material-icons">search</button>
      </div>
      <input type="text" class="form-control border-secondary border-left-0 border-right-0">
      <div class="input-group-append">
        <button type="button" class="btn border-secondary border-left-0 material-icons" @onclick="Advanced">keyboard_arrow_down</button>
      </div>
    </div>
    @if (_advanced)
    {
    <div class="card p-3">
      @for (int i = 0; i < 3; i++)
      {
      <div class="row">
        <div class="col-sm">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <button type="submit" class="btn border-secondary border-right-0 material-icons">search</button>
            </div>
            <input type="text" class="form-control border-secondary border-left-0" placeholder="search parameter @i">
          </div>
        </div>
      </div>
      }
    </div>
    }
  </div>

@code {

  bool _advanced = false;
  public void Advanced()
  {
    if (!_advanced) _advanced = true;
    else _advanced = false;

    Console.WriteLine("advanced search options");
  }
}
